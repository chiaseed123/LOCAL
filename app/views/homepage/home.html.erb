<% if current_user %>
  <div id="viewlist" class="container" style="float: left; padding: 1%; width: 80%; overflow: hidden; border: 1px solid #000;">
    <!-- View Paper Code -->
      <h2> ADTS 2020 Papers </h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th> List of Papers </th>
            <th> Link </th>
            <th> Status </th>
            <th> Action </th>
          </tr>
        </thead>
        <tbody>
          <% @papers.each do |paper| %>
            <tr>
              <td><%= paper.title %></td>
              <td><%= paper.link %></td>
                <% if !@scores.nil? %>
                  <% graded = 0 %>
                  <% @scores.each do |score| %>
                    <% if score.paper_id == paper.id %>
                      <td>Graded</td>
                      <td>
                          <%= link_to 'Edit', paper%>
                      </td>
                      <% graded = graded + 1 %>
                    <% end %>
                  <% end %>
                    <% if graded == 0 %>
                      <td>Ungraded</td>
                      <td>
                        <%= link_to 'Review', paper %>
                      </td>
                    <% end %>
                <% else %>
                  <td>Ungraded</td>
                  <td>
                    <%= link_to 'Review', paper  %>
                  </td>
                <% end %>
            </tr>
          <% end %>
        </tbody>      
      </table>
  </div>
<% else %>
  <!-- When User is not logged in -->
    <div id="slider" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("bg0.jpg") %>
            <div class="carousel-caption">
              <h1 class="display-1 font-weight-bolder">ADTS 2020</h1>
            </div>
        </div>
      </div>
    </div>
<% end %>

